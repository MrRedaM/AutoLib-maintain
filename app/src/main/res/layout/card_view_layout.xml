<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="16dp"
    android:orientation="horizontal"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_selector">

        <TextView
            android:id="@+id/Titre"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/noir"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textAvancement"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_alignStart="@+id/description"
            android:layout_alignLeft="@+id/description"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat"
            android:text="Avancement"
            android:textColor="@color/noir"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/avancement"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@+id/textAvancement"
            android:layout_toRightOf="@+id/textAvancement"
            android:fontFamily="@font/montserrat"
            android:text="10 %"
            android:textColor="@color/green"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="119dp"
            android:layout_height="16dp"
            android:layout_below="@+id/Titre"
            android:layout_alignStart="@+id/Titre"
            android:layout_alignLeft="@+id/Titre"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:text="Avancement"
            android:textColor="@color/noir"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/idVoiture"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressTaskHome"
            android:layout_alignStart="@+id/progressTaskHome"
            android:layout_alignLeft="@+id/progressTaskHome"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_corners_textview"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="Avancement"
            android:textColor="#FFB34B"
            android:textColorHighlight="#FFE8C8"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progressTaskHome"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="30dp"
            android:layout_height="8dp"
            android:layout_below="@+id/textAvancement"
            android:layout_alignStart="@+id/textAvancement"
            android:layout_alignLeft="@+id/textAvancement"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="0.5"
            android:progress="50"
            android:progressDrawable="@drawable/rounded_corners_progressbar" />
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>